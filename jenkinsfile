pipeline {
    agent any
    tools {
       maven 'maven'
       Terraform 'terraform'
    
    }


//environment { 
  //      PATH = "${PATH}:${getterraform()}"
   // }

  stages {
	stage ('checkout')
 	{
		steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/yarli9951/GITDEMO.git']]])
            }
	}
	stage ('build')
	{
		steps {
		script {
		
		sh '''
		      
		      cd /var/lib/jenkins/workspace/Terraform/my-app
              mvn package 
			'''
		}
		}
	}
	stage ('Non-regression')
	{
		steps {
		echo 'This is build stage'
		}
	}
         stage ('deploy')
	{
		steps {
		echo 'This is build stage'
		}
	}
stage ('Terraform')
{
	steps
	{
	script 
	{
		sh 'cd /var/lib/jenkins/workspace/Terraform/; terraform apply --auto-approve'
	}
	
}
}

    }
}


def getterraform(){

   def getpath=tool name: 'Terraform', type: 'terraform'
   return getpath
}
